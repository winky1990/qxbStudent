<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_top"
        android:gravity="center"
        android:paddingBottom="@dimen/px_10"
        android:paddingTop="@dimen/px_10"
        android:textColor="@android:color/black"
        android:textSize="@dimen/px_40" />

    <TextView
        android:id="@id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_bottom"
        android:gravity="center"
        android:paddingStart="@dimen/px_100"
        android:paddingEnd="@dimen/px_100"
        android:paddingBottom="@dimen/px_15"
        android:paddingTop="@dimen/px_15"
        android:textColor="@android:color/black"
        android:textSize="@dimen/px_40" />
</LinearLayout>