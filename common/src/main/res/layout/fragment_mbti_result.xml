<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/px_30"
        android:paddingBottom="@dimen/px_30"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_35"
            android:layout_marginTop="@dimen/px_60"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px_60" />

        <com.qxb.student.common.view.abslist.GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/px_160"
            android:layout_marginStart="@dimen/px_160"
            android:layout_marginTop="@dimen/px_60"
            android:numColumns="4"
            android:scrollbars="none"
            android:stretchMode="columnWidth" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/px_60"
            android:layout_marginStart="@dimen/px_60"
            android:layout_marginTop="@dimen/px_30"
            android:gravity="top|start"
            android:lineSpacingExtra="@dimen/px_8"
            android:textColor="@color/black"
            android:textSize="@dimen/px_45" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>