<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_400"
    android:background="@android:color/white">

    <com.qxb.student.common.view.bannerview.ViewFlow
        android:id="@+id/viewFlow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="horizontal" />

    <com.qxb.student.common.view.bannerview.CircleFlowIndicator
        android:id="@+id/flowIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px_20"
        android:padding="@dimen/px_3"
        app:activeColor="#01BE9F"
        app:activeType="fill"
        app:circleSeparation="@dimen/px_30"
        app:inactiveColor="#ffffff"
        app:inactiveType="fill"
        app:radius="3dip" />
</RelativeLayout>