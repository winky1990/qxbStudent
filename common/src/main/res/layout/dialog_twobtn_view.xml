<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/px_50"
    android:layout_marginRight="@dimen/px_50"
    android:background="@drawable/login_button_bg"
    android:orientation="vertical"
    android:padding="@dimen/px_60">

    <LinearLayout
        android:id="@+id/ll_tips"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/px_20"
            android:gravity="center"
            android:src="@mipmap/msg_tip_img" />

        <TextView
            android:id="@+id/tv_msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_30"
            android:layout_marginTop="@dimen/px_45"
            android:gravity="center"
            android:text="@string/msg_tip"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px_50" />
    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_30"
        android:layout_marginTop="@dimen/px_20"
        android:gravity="center_vertical|left"
        android:textColor="@android:color/black"
        android:textSize="@dimen/px_40" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/left_btn"
            style="@style/gray_button"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
             />

        <TextView
            android:id="@+id/right_btn"
            style="@style/darkgreen_button"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/ok"
            />
    </LinearLayout>
</LinearLayout>