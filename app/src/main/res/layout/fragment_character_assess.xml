<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/holland_bg">

    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px_40"
        android:layout_marginTop="@dimen/px_75"
        android:clickable="true"
        android:contentDescription="@string/hint_not_describe"
        android:focusable="true"
        android:minHeight="@dimen/px_60"
        android:minWidth="@dimen/px_60"
        app:srcCompat="@drawable/arrow_left_white" />

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="@dimen/px_350"
            android:layout_height="@dimen/px_600"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/px_20"
            android:background="@drawable/character_assess_top">

            <TextView
                android:id="@+id/down"
                android:layout_width="@dimen/px_300"
                android:layout_height="@dimen/px_300"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginTop="@dimen/px_20"
                android:background="@drawable/shape_circle_white"
                android:drawableTop="@mipmap/mbti"
                android:gravity="center"
                android:paddingBottom="@dimen/px_30"
                android:paddingTop="@dimen/px_65"
                android:text="@string/hint_character_assess"
                android:textColor="@color/black"
                android:textSize="@dimen/px_35" />
        </FrameLayout>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameLayout1"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/down_hld2x" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/px_80"
        android:layout_marginRight="@dimen/px_80"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/px_5"
        android:text="@string/hint_character_assess_desc"
        android:textColor="@android:color/white"
        android:textSize="@dimen/px_40" />

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/px_20"
            android:src="@mipmap/upward_hld2x" />

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="@dimen/px_350"
            android:layout_height="@dimen/px_600"
            android:layout_below="@+id/image2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_20"
            android:background="@drawable/character_assess_bottom">

            <TextView
                android:layout_width="@dimen/px_300"
                android:layout_height="@dimen/px_300"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="@dimen/px_20"
                android:background="@drawable/shape_circle_white"
                android:drawableTop="@mipmap/hld2x"
                android:gravity="center"
                android:paddingBottom="@dimen/px_30"
                android:paddingTop="@dimen/px_25"
                android:text="@string/hint_hollaender_assess"
                android:textColor="@color/black"
                android:textSize="@dimen/px_35" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>